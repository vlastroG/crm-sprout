@using Consulting.WebClient.Helpers
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Consulting.WebClient</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/Consulting.WebClient.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <ul class="navbar-nav">
                    <a class="navbar-brand" asp-area="" asp-controller="ConsultingTasks" asp-action="Create">Главная</a>
                    @if (Context.Session.IsAdminUser())
                    {
                        <a class="nav-link text-dark" asp-controller="ConsultingTasks" asp-action="Index">Рабочий стол</a>
                    }
                    <a class="nav-link text-dark" asp-controller="CompanyServices" asp-action="Index">Услуги</a>
                    <a class="nav-link text-dark" asp-controller="ConsultingProjects" asp-action="Index">Проекты</a>
                    <a class="nav-link text-dark" asp-controller="BlogPosts" asp-action="Index">Блог</a>
                    <a class="nav-link text-dark" asp-controller="Home" asp-action="Contacts">Контакты</a>
                </ul>
                <partial name="_LoginPartial" />
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - IT - Консалтинг
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
