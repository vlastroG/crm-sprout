@model Consulting.Models.BlogPost

@{
    ViewData["Title"] = "Delete";
}

<h1>Удаление поста</h1>

<h3>Вы уверены, что хотите удалить этот пост?</h3>
<div>
    <h4>Пост</h4>
    <hr />
    <dl class="row">
        <dd class="col-sm-10">
            <img src="data:image;base64,@System.Convert.ToBase64String(Model.Photo ?? Array.Empty<byte>())" />
        </dd>
        <dd/>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Name)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentShort)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentShort)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.ContentFull)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ContentFull)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="submit" value="Удалить" class="btn btn-danger" /> |
        <a asp-action="Index">Назад к списку</a>
    </form>
</div>
